{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Automatic-File-Uploader",
    "version": "1.4.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "window": {
        "close": true,
        "minimize": true,
        "unmaximize": true,
        "maximize": true,
        "startDragging": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "readDir": true,
        "scope": ["**"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "Automatic-File-Uploader",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "resources": [
        "Resources/*"
      ],
      "windows": {
        "nsis": {
          "license": "../LICENSE",
          "installerIcon": "icons/setup_icon.ico",
          "sidebarImage": "icons/sidebar.bmp"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Automatic-File-Uploader",
        "width": 1100,
        "height": 700,
        "minWidth": 1100,
        "minHeight": 700,
        "decorations": false,
        "fileDropEnabled": false,
        "transparent": true
      }
    ]
  }
}
